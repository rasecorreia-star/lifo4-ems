# Lifo4 EMS AI Service Configuration

# Application
AI_DEBUG=false
AI_HOST=0.0.0.0
AI_PORT=8001
AI_WORKERS=1

# Backend API
AI_BACKEND_URL=http://localhost:3001
AI_BACKEND_API_KEY=

# Redis
AI_REDIS_URL=redis://localhost:6379/1

# YOLOv8 Settings
AI_YOLO_MODEL=yolov8n.pt
AI_YOLO_CONFIDENCE=0.5
AI_YOLO_IOU_THRESHOLD=0.45

# Whisper Settings
AI_WHISPER_MODEL=base
AI_WHISPER_LANGUAGE=pt

# Processing limits
AI_MAX_IMAGE_SIZE=1920
AI_MAX_VIDEO_DURATION=60
AI_MAX_AUDIO_DURATION=30

# Model paths
AI_MODELS_DIR=./models
AI_ANOMALY_MODEL_PATH=./models/battery_anomaly.pkl
AI_FORECAST_MODEL_PATH=./models/load_forecast.pkl

# GPU settings
AI_USE_GPU=true
AI_GPU_DEVICE=0
