# Lifo4 EMS - Edge Gateway Configuration

# Device identification
EDGE_DEVICE_ID=rpi-gateway-001
EDGE_SITE_ID=site-001
EDGE_ORGANIZATION_ID=org-001

# Local API server
EDGE_API_HOST=0.0.0.0
EDGE_API_PORT=8080

# MQTT configuration
EDGE_MQTT_BROKER=mqtt.lifo4.com.br
EDGE_MQTT_PORT=1883
EDGE_MQTT_USERNAME=device
EDGE_MQTT_PASSWORD=device-password

# Cloud API
EDGE_CLOUD_API_URL=https://api.lifo4.com.br
EDGE_CLOUD_API_KEY=

# Local database
EDGE_DATABASE_PATH=./data/edge.db
EDGE_DATA_RETENTION_DAYS=7

# Modbus configuration
EDGE_MODBUS_ENABLED=true
EDGE_MODBUS_PORT=/dev/ttyUSB0
EDGE_MODBUS_BAUDRATE=9600

# CAN bus configuration
EDGE_CAN_ENABLED=false
EDGE_CAN_INTERFACE=can0
EDGE_CAN_BITRATE=250000

# Connected devices (comma-separated)
EDGE_BMS_DEVICES=bms-001
EDGE_INVERTER_DEVICES=
EDGE_METER_DEVICES=

# Polling intervals (milliseconds)
EDGE_TELEMETRY_INTERVAL=5000
EDGE_STATUS_INTERVAL=60000
EDGE_SYNC_INTERVAL=30000

# Buffer settings
EDGE_OFFLINE_BUFFER_SIZE=10000
EDGE_SYNC_BATCH_SIZE=100

# Features
EDGE_LOCAL_DASHBOARD=true
EDGE_DATA_LOGGING=true
EDGE_ALERT_FORWARDING=true
