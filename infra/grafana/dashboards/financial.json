{
  "uid": "financial",
  "title": "Financial Dashboard",
  "description": "Financial performance and ROI tracking",
  "tags": ["lifo4", "financial", "roi"],
  "timezone": "browser",
  "refresh": "5m",
  "time": { "from": "now-30d", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Total Monthly Savings (R$)",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(financial_monthly_saving_brl)",
          "legendFormat": "Total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyBRL",
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "green", "value": 0 }] }
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Tax Savings (R$)",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(financial_tax_saving_brl)",
          "legendFormat": "Tax Saving"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyBRL",
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "purple", "value": 0 }] }
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Daily Savings Breakdown (R$)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 4 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "financial_peak_shaving_saving_brl",
          "legendFormat": "Peak Shaving"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "financial_arbitrage_revenue_brl",
          "legendFormat": "Arbitrage"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "financial_grid_services_revenue_brl",
          "legendFormat": "Grid Services"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "financial_tax_saving_brl",
          "legendFormat": "Tax Optimization"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyBRL",
          "custom": { "stacking": { "mode": "normal" } }
        }
      }
    }
  ],
  "schemaVersion": 38
}
