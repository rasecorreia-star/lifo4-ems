{
  "uid": "infrastructure",
  "title": "Infrastructure Health",
  "description": "Backend services, API latency, MQTT throughput",
  "tags": ["lifo4", "infra", "ops"],
  "timezone": "browser",
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "API Latency p95 (s)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95 {{ method }} {{ route }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 2 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "MQTT Messages/s",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(mqtt_messages_received_total[1m])",
          "legendFormat": "Received"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(mqtt_messages_sent_total[1m])",
          "legendFormat": "Sent"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "HTTP Requests/s",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "{{ status_code }} {{ method }}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Active WebSocket Connections",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "active_websocket_connections",
          "legendFormat": "WS Connections"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    }
  ],
  "schemaVersion": 38
}
