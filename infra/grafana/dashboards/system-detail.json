{
  "uid": "system-detail",
  "title": "System Detail",
  "description": "Detailed view of a single BESS system",
  "tags": ["lifo4", "system", "bess"],
  "timezone": "browser",
  "refresh": "10s",
  "time": { "from": "now-3h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "system_id",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(battery_soc, system_id)",
        "label": "System",
        "current": {}
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "State of Charge (%)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "battery_soc{system_id=~\"$system_id\"}",
          "legendFormat": "SoC %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 20 },
              { "color": "green", "value": 30 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Power (kW) â€” Charge/Discharge",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "battery_power_kw{system_id=~\"$system_id\"}",
          "legendFormat": "Power kW (+charge / -discharge)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "custom": { "lineWidth": 2 }
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Temperature (C)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "battery_temperature_celsius{system_id=~\"$system_id\"}",
          "legendFormat": "Temperature"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "thresholds": {
            "steps": [
              { "color": "blue", "value": 0 },
              { "color": "green", "value": 15 },
              { "color": "yellow", "value": 40 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "State of Health",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "battery_soh{system_id=~\"$system_id\"}",
          "legendFormat": "SoH %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 85 },
              { "color": "green", "value": 95 }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Control Loop Duration",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, rate(control_loop_duration_seconds_bucket{system_id=~\"$system_id\"}[5m]))",
          "legendFormat": "p95 duration"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.5 }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Decisions / min",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 8 },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(decisions_total{system_id=~\"$system_id\"}[1m]) * 60",
          "legendFormat": "decisions/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": { "steps": [{ "color": "green", "value": 0 }] }
        }
      }
    }
  ],
  "schemaVersion": 38
}
