{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "integration/**/*.ts",
    "stress/**/*.ts",
    "helpers/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
